<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hmp.android.datapoints.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lang"
         />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/ramm"
        android:layout_below="@+id/btnn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Press for RAM Usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnn1"
        android:layout_below="@+id/rammp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rammp"
        android:layout_below="@+id/ramm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Button for Phone Language"
        android:layout_marginTop="19dp"
        android:id="@+id/btnn"
        android:layout_below="@+id/lang"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/occupied" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupied"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/freespace" />

    <Button
        android:text="Press for Memory Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freespace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/mem" />
</RelativeLayout>
